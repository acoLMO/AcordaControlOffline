@page "/"
@using System.IO
@using Agridea.Acorda.AcordaControlOffline.Shared.ApplicationServices.DTOs
@using Newtonsoft.Json

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Filtre</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-sm bg-gray-light" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <p>This is some content</p>
                <p>This is some content</p>
                <p>This is some content</p>
                <p>This is some content</p>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary"><i class="fas fa-save"></i> Enregistrer</button>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">51 exploitations à contrôler</h3>
            </div>
            <div class="card-body">
                <div class="list-group">
                    @foreach (var mandate in mandates)
                    {
                        <div id="" class="list-group-item list-group-item-yearly" href="#">
                            <a class="btn btn-default btn-sm float-right" href="#">
                                <i class="fas fa-arrow-right"></i><span class="sr-only">Naviguer vers le détail du mandat</span>
                            </a>

                            <h4 class="list-group-item-heading mb-1">@mandate.Farm.Ktidb @mandate.Farm.Address</h4>
                            <p class="list-group-item-text mb-1">
                                <span><i class="far fa-envelope"></i> @mandate.Farm.Address</span>
                                <span class="ml-2"><i class="fas fa-tractor"></i> @mandate.Farm.FarmType</span>
                                <span class="ml-2"><i class="fas fa-at"></i> @mandate.Farm.Email</span>
                                <span class="ml-2"><i class="fas fa-mobile-alt"></i> @mandate.Farm.PhoneNumber</span>
                            </p>
                            <p class="mb-1">
                                @foreach (var badge in mandate.Badges)
                                {
                                    <span class="badge badge-round bg-@badge.Category " title="@badge.Title">@badge.Name</span>
                                }
                            </p>
                            <div class="progress progress-tall mt-2 mb-2">
                                <div class="progress-bar p-1" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%"></div>
                                <div class="progress-bar-text">
                                    <span role="label">IPS Exigences de base (FALBRIARD * Jean-Michel)</span>
                                    <span role="percent" class="ml-2">40%</span>
                                    <span role="outcome" class="ml-2"></span>
                                </div>
                            </div>
                            <div class="progress progress-tall mt-2 mb-2">
                                <div class="progress-bar bg-gradient-success p-1" role="progressbar" aria-valuenow="100.00" aria-valuemin="0" aria-valuemax="100" style="width: 100.00%"></div>
                                <div class="progress-bar-text">
                                    <span role="label">IPS Exigences de base (FALBRIARD * Jean-Michel)</span>
                                    <span role="percent" class="ml-2">100%</span>
                                    <span role="outcome" class="ml-2"><i class="far fa-thumbs-up"></i> Ok</span>
                                    <span role="lock" class="ml-2"><i class="fas fa-lock"></i> Clôturé le 16.06.2020 11:20:49</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>

@code {

    private Mandate[] mandates;
    protected override async Task OnInitializedAsync()
    {
        string json = await File.ReadAllTextAsync("sample-data\\mandates.json");
        mandates = JsonConvert.DeserializeObject<Mandate[]>(json);
    }

}