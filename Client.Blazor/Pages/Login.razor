@page "/login"
@using Agridea.Acorda.AcordaControlOffline.Client.Blazor.UiServices
@inject NavigationManager Navigation

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Connexion</h3>
    </div>
    <div class="card-body">
        @if (initialized)
        {
            <LoginComponent Model="@loginModel" ReturnUrl="@returnUrl"></LoginComponent>
        }
    </div>
</div>

@code {

    string returnUrl;
    bool initialized;
    LoginComponent.LoginModel loginModel;

    protected override void OnInitialized()
    {
        Console.WriteLine("Executing OnInitialized from Login");
        returnUrl = Navigation.QueryString("returnUrl");
        loginModel = LoginComponent.LoginModel.Empty();
        initialized = true;
    }

}